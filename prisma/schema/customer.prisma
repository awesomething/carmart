model Customer {
  id            Int                 @id @default(autoincrement())
  first_name     String
  last_name      String
  email         String
  mobile        String?
  booking_date   DateTime?
  terms_accepted Boolean             @default(false)
  status        CustomerStatus      @default(INTERESTED)
  classified_id  Int?                @map("classified_id")
  classified    Classified?         @relation(fields: [classified_id], references: [id], onDelete: Cascade)
  created_at     DateTime            @default(now())
  updated_at     DateTime            @updatedAt
  lifecycle     CustomerLifecycle[]

  @@map("customers")
}

enum CustomerStatus {
  SUBSCRIBER
  INTERESTED
  CONTACTED
  PURCHASED
  COLD
}